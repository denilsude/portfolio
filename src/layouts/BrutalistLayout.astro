---
import PixModal from '../components/PixModal.astro';

const { title } = Astro.props;

const socialLinks = [
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/denilsonso/', icon: 'fa-linkedin' },
  { name: 'GitHub', url: 'https://github.com/denilsude', icon: 'fa-github' },
  { name: 'HackerRank', url: 'https://www.hackerrank.com/profile/denilsonfb21', icon: 'fa-code' }
];
---

<!DOCTYPE html>
<html lang="pt-br" class="bg-yellow-400">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{title}</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <style is:global>
    :root {
      --bg: #facc15;
      --text: #000000;
      --accent: #ff5e5b;
    }

    .pix-button {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      background: white;
      border: 4px solid black;
      padding: 1rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      text-decoration: none;
      color: black;
      font-weight: 900;
      text-transform: uppercase;
      box-shadow: 8px 8px 0px 0px rgba(0,0,0,1);
      transition: all 0.2s;
      z-index: 40;
    }

    .pix-button:hover {
      transform: translate(4px, 4px);
      box-shadow: 4px 4px 0px 0px rgba(0,0,0,1);
    }
  </style>
</head>
<body class="bg-yellow-400 text-black min-h-screen flex flex-col font-sans selection:bg-black selection:text-yellow-400">
  
  <nav class="border-b-8 border-black p-6 flex justify-between items-center bg-white sticky top-0 z-50">
    <a href="/" class="text-3xl font-black uppercase tracking-tighter hover:italic transition-all">
      Denilson Oliveira
    </a>
    <div class="flex gap-8">
      <a href="/about" class="text-xl font-black uppercase hover:underline underline-offset-8">Sobre</a>
      <a href="/projects" class="text-xl font-black uppercase hover:underline underline-offset-8">Projetos</a>
    </div>
  </nav>

  <div class="flex-grow">
    <slot />
  </div>

  <a href="#pix-modal" class="pix-button">
    <i class="fa-solid fa-qrcode text-2xl"></i>
    <span class="font-black uppercase">Apoie com PIX</span>
  </a>

  <footer class="border-t-8 border-black p-12 bg-black text-white mt-12">
    <div class="flex flex-col md:flex-row justify-between items-center gap-8 max-w-7xl mx-auto w-full">
      
      <div class="flex gap-8 text-4xl">
        {socialLinks.map(link => (
          <a href={link.url} target="_blank" aria-label={link.name} class="hover:text-yellow-400 transition-colors">
            <i class={`fa-brands ${link.icon === 'fa-code' ? 'fa-solid fa-code' : link.icon}`}></i>
          </a>
        ))}
      </div>

      <div class="text-center">
        <p class="text-[10px] font-black uppercase tracking-widest text-gray-400 mb-2">Architecture & Code</p>
        <div class="font-black uppercase border-2 border-white px-6 py-2 bg-white text-black shadow-[6px_6px_0px_0px_rgba(255,255,255,0.3)]">
          Powered by Denilson Oliveira
        </div>
      </div>

      <div class="text-right flex flex-col items-end">
        <span class="text-xs font-bold uppercase opacity-60 mb-1">Operado por:</span>
        <a href="https://manditecnologia.com.br/" target="_blank" class="text-2xl font-black hover:text-yellow-400 uppercase tracking-tighter transition-colors">
          Mandi Tecnologia
        </a>
      </div>
      
    </div>
  </footer>

  <PixModal />
</body>
</html>