---
import PixModal from '../components/PixModal.astro';

const { title } = Astro.props;
const socialLinks = [
  { name: 'LinkedIn', url: 'https://www.linkedin.com/in/denilsonso/', icon: 'fa-linkedin' },
  { name: 'GitHub', url: 'https://github.com/denilsude', icon: 'fa-github' },
  { name: 'HackerRank', url: 'https://www.hackerrank.com/profile/denilsonfb21', icon: 'fa-code' }
];
---

<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{title}</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <style is:global>
    :root {
      --bg: #ffffff;
      --text: #000000;
      --accent: #ff5e5b;
    }
    
    .coffee-button {
      position: fixed;
      bottom: 2rem;
      right: 2rem;
      background: white;
      border: 4px solid black;
      padding: 1rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
      text-decoration: none;
      color: black;
      font-weight: 900;
      text-transform: uppercase;
      box-shadow: 8px 8px 0px 0px rgba(0,0,0,1);
      transition: all 0.2s;
      z-index: 40;
    }

    .coffee-button:hover {
      transform: translate(4px, 4px);
      box-shadow: 4px 4px 0px 0px rgba(0,0,0,1);
    }
  </style>
</head>
<body class="bg-white text-black min-h-screen flex flex-col">
  <nav class="border-b-4 border-black p-4 flex justify-between items-center bg-white sticky top-0 z-50">
    <a href="/" class="text-2xl font-black uppercase tracking-tighter">Denilson Sude</a>
    <div class="flex gap-6">
      <a href="/about" class="font-bold uppercase hover:underline underline-offset-4">Sobre</a>
      <a href="/projects" class="font-bold uppercase hover:underline underline-offset-4">Projetos</a>
    </div>
  </nav>

  <div class="flex-grow">
    <slot />
  </div>

  <a href="#pix-modal" class="coffee-button">
    <div class="coffee-icon-wrapper">
      <i class="fa-solid fa-qrcode text-2xl"></i>
    </div>
    <span class="coffee-text">Apoie com PIX</span>
  </a>

  <footer class="border-t-4 border-black p-8 bg-white mt-12">
    <div class="flex flex-col md:flex-row justify-between items-center gap-8 max-w-7xl mx-auto w-full">
      
      <div class="flex gap-6">
        {socialLinks.map(link => (
          <a href={link.url} target="_blank" aria-label={link.name} class="text-3xl hover:text-accent transition-colors">
            <i class={`fa-brands ${link.icon}`}></i>
          </a>
        ))}
      </div>

      <div class="text-center">
        <p class="text-[10px] font-black uppercase tracking-widest text-gray-500 mb-1">Engenharia e Arquitetura</p>
        <div class="font-black uppercase border-2 border-black px-4 py-1 bg-yellow-300 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
          Powered by Denilson Sude
        </div>
      </div>

      <div class="text-right flex flex-col items-end">
        <span class="text-[10px] font-bold uppercase text-gray-500">Operação por:</span>
        <a href="https://manditecnologia.com.br/" target="_blank" class="font-black hover:underline text-lg uppercase">
          Mandi Tecnologia
        </a>
      </div>
      
    </div>
  </footer>

  <PixModal />
</body>
</html>