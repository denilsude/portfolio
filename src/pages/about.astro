---

<BrutalistLayout title="Sobre - Levi Lucena">
  <!-- HERO SECTION -->
  <section class="about-hero">
    <div class="container">
      <h1>About<br /><span class="text-accent">Me</span></h1>
      <p class="hero-subtitle">{author.role}</p>
      <p class="hero-bio">{author.bio}</p>
      <div class="hero-stats">
        <div class="stat">
          <span class="stat-number">{author.experience}</span>
          <span class="stat-label">Experiência</span>
        </div>
        <div class="stat">
          <span class="stat-number">São Paulo</span>
          <span class="stat-label">Localização</span>
        </div>
      </div>
    </div>
  </section>

  <!-- EDUCATION SECTION -->
  <section class="container">
    <h2 class="section-title">Formação Acadêmica</h2>
    <div class="education-grid">
      {education.map((edu, index) => (
        <div class="education-card hover-trigger">
          <div class="education-year">{edu.year}</div>
          <div class="education-content">
            <h3>{edu.title}</h3>
            <p>{edu.institution}</p>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- HARVARD CS50 SECTION -->
  <section class="container">
    <h2 class="section-title">Formação Complementar <span class="text-accent">– Harvard University</span></h2>
    <div class="harvard-grid">
      {harvardCS50.map((course, index) => (
        <div class="harvard-card hover-trigger">
          <div class="harvard-year">{course.year}</div>
          <div class="harvard-content">
            <h3>{course.title}</h3>
            {course.status && <span class="status-badge">{course.status}</span>}
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- TECH STACK SECTION -->
  <section class="container">
    <h2 class="section-title">Tech Stack</h2>
    <div class="tech-stack">
      <!-- Languages -->
      <div class="tech-category">
        <h3>Languages</h3>
        <div class="tech-tags">
          {techStack.languages.map(tech => (
            <span class="tech-tag"><i class={tech.icon}></i>{tech.name}</span>
          ))}
        </div>
      </div>

      <!-- Frameworks -->
      <div class="tech-category">
        <h3>Frameworks</h3>
        <div class="tech-tags">
          {techStack.frameworks.map(tech => (
            <span class="tech-tag"><i class={tech.icon}></i>{tech.name}</span>
          ))}
        </div>
      </div>

      <!-- Frontend -->
      <div class="tech-category">
        <h3>Frontend</h3>
        <div class="tech-tags">
          {techStack.frontend.map(tech => (
            <span class="tech-tag"><i class={tech.icon}></i>{tech.name}</span>
          ))}
        </div>
      </div>

      <!-- AI/ML -->
      <div class="tech-category">
        <h3>AI & ML</h3>
        <div class="tech-tags">
          {techStack.ai_ml.map(tech => (
            <span class="tech-tag"><i class={tech.icon}></i>{tech.name}</span>
          ))}
        </div>
      </div>

      <!-- Data Viz -->
      <div class="tech-category">
        <h3>Data Viz</h3>
        <div class="tech-tags">
          {techStack.data_viz.map(tech => (
            <span class="tech-tag"><i class={tech.icon}></i>{tech.name}</span>
          ))}
        </div>
      </div>

      <!-- Computer Vision -->
      <div class="tech-category">
        <h3>Computer Vision</h3>
        <div class="tech-tags">
          {techStack.computer_vision.map(tech => (
            <span class="tech-tag"><i class={tech.icon}></i>{tech.name}</span>
          ))}
        </div>
      </div>

      <!-- Cloud -->
      <div class="tech-category">
        <h3>Cloud & APIs</h3>
        <div class="tech-tags">
          {techStack.cloud.map(tech => (
            <span class="tech-tag"><i class={tech.icon}></i>{tech.name}</span>
          ))}
        </div>
      </div>

      <!-- Databases -->
      <div class="tech-category">
        <h3>Databases</h3>
        <div class="tech-tags">
          {techStack.databases.map(tech => (
            <span class="tech-tag"><i class={tech.icon}></i>{tech.name}</span>
          ))}
        </div>
      </div>

      <!-- DevOps -->
      <div class="tech-category">
        <h3>DevOps</h3>
        <div class="tech-tags">
          {techStack.devops.map(tech => (
            <span class="tech-tag"><i class={tech.icon}></i>{tech.name}</span>
          ))}
        </div>
      </div>

      <!-- Security -->
      <div class="tech-category">
        <h3>Security</h3>
        <div class="tech-tags">
          {techStack.security.map(tech => (
            <span class="tech-tag"><i class={tech.icon}></i>{tech.name}</span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CERTIFICATIONS SECTION -->
  <section class="container">
    <h2 class="section-title">Certificações <span class="text-accent">Profissionais</span></h2>
    <div class="certifications-grid">
      {Object.values(certifications).map(provider => (
        <div class="cert-provider hover-trigger">
          <h3 class="provider-name"><i class={provider.icon}></i>{provider.name}</h3>
          <div class="provider-count">{provider.certs.length}</div>
          <ul class="cert-list">
            {provider.certs.map(cert => (
              <li>{cert}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>

  <style is:global>
    /* ABOUT HERO */
    .about-hero {
      min-height: 80vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      border-bottom: 1px solid var(--border-color);
    }

    .about-hero h1 {
      font-family: var(--font-heading);
      font-size: clamp(4rem, 12vw, 10rem);
      line-height: 0.9;
      text-transform: uppercase;
      margin-bottom: 1rem;
    }

    .about-hero h1 span {
      color: var(--accent-color);
    }

    .hero-subtitle {
      font-family: var(--font-heading);
      font-size: 2rem;
      text-transform: uppercase;
      margin-bottom: 2rem;
      letter-spacing: 2px;
    }

    .hero-bio {
      font-size: 1.3rem;
      max-width: 800px;
      opacity: 0.9;
      line-height: 1.8;
      margin-bottom: 3rem;
    }

    .hero-stats {
      display: flex;
      gap: 2rem;
    }

    .stat {
      border: 3px solid var(--accent-color);
      padding: 1.5rem 2rem;
      min-width: 200px;
    }

    .stat-number {
      display: block;
      font-family: var(--font-heading);
      font-size: 2.5rem;
      color: var(--accent-color);
      line-height: 1;
    }

    .stat-label {
      font-size: 0.9rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      opacity: 0.8;
    }

    /* SECTION TITLE */
    .section-title {
      font-family: var(--font-heading);
      font-size: clamp(2rem, 5vw, 4rem);
      margin-bottom: 3rem;
      text-transform: uppercase;
      border-bottom: 3px solid var(--accent-color);
      padding-bottom: 1rem;
      display: inline-block;
    }

    /* EDUCATION */
    .education-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1px;
      border-top: 1px solid var(--border-color);
      border-left: 1px solid var(--border-color);
    }

    .education-card {
      border-right: 1px solid var(--border-color);
      border-bottom: 1px solid var(--border-color);
      padding: 2rem;
      transition: all 0.3s ease;
    }

    .education-card:hover {
      background-color: var(--text-color);
      color: var(--bg-color);
      transform: translateY(-5px);
      box-shadow: 8px 8px 0px var(--accent-color);
    }

    .education-year {
      font-family: var(--font-heading);
      font-size: 3rem;
      color: var(--accent-color);
      line-height: 1;
      margin-bottom: 1rem;
    }

    .education-card:hover .education-year {
      color: var(--bg-color);
    }

    .education-content h3 {
      font-family: var(--font-heading);
      font-size: 1.5rem;
      text-transform: uppercase;
      margin-bottom: 0.5rem;
      line-height: 1.2;
    }

    .education-content p {
      font-size: 1rem;
      opacity: 0.8;
    }

    /* HARVARD CS50 */
    .harvard-grid {
      display: flex;
      flex-direction: column;
      gap: 1px;
      border: 1px solid var(--border-color);
    }

    .harvard-card {
      display: flex;
      align-items: center;
      gap: 2rem;
      padding: 1.5rem 2rem;
      border-bottom: 1px solid var(--border-color);
      transition: all 0.3s ease;
    }

    .harvard-card:last-child {
      border-bottom: none;
    }

    .harvard-card:hover {
      background-color: var(--text-color);
      color: var(--bg-color);
      transform: translateX(10px);
      box-shadow: 8px 8px 0px var(--accent-color);
    }

    .harvard-year {
      font-family: var(--font-heading);
      font-size: 2.5rem;
      color: var(--accent-color);
      line-height: 1;
      min-width: 100px;
    }

    .harvard-card:hover .harvard-year {
      color: var(--bg-color);
    }

    .harvard-content {
      display: flex;
      align-items: center;
      gap: 1rem;
      flex: 1;
    }

    .harvard-content h3 {
      font-family: var(--font-heading);
      font-size: 1.3rem;
      text-transform: uppercase;
      line-height: 1.2;
    }

    .status-badge {
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      padding: 0.3rem 0.8rem;
      background-color: var(--accent-color);
      color: var(--bg-color);
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0%, 100% {
        opacity: 1;
      }
      50% {
        opacity: 0.7;
      }
    }

    .harvard-card:hover .status-badge {
      background-color: var(--bg-color);
      color: var(--accent-color);
    }

    /* TECH STACK */
    .tech-stack {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }

    .tech-category {
      border: 3px solid var(--border-color);
      padding: 2rem;
      transition: all 0.3s ease;
    }

    .tech-category:hover {
      border-color: var(--accent-color);
      transform: translateY(-5px);
      box-shadow: 8px 8px 0px var(--accent-color);
    }

    .tech-category h3 {
      font-family: var(--font-heading);
      font-size: 1.8rem;
      text-transform: uppercase;
      margin-bottom: 1.5rem;
      color: var(--accent-color);
    }

    .tech-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .tech-tag {
      font-size: 0.85rem;
      font-weight: 700;
      text-transform: uppercase;
      padding: 0.5rem 1rem;
      border: 1px solid var(--text-color);
      transition: all 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
    }

    .tech-tag i {
      font-size: 1.1rem;
      color: var(--accent-color);
      transition: all 0.3s ease;
    }

    .tech-tag:hover {
      background-color: var(--accent-color);
      color: var(--bg-color);
      border-color: var(--accent-color);
    }

    .tech-tag:hover i {
      color: var(--bg-color);
    }

    /* CERTIFICATIONS */
    .certifications-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 2rem;
    }

    .cert-provider {
      border: 3px solid var(--border-color);
      padding: 2rem;
      transition: all 0.3s ease;
      position: relative;
    }

    .cert-provider:hover {
      border-color: var(--accent-color);
      transform: translateY(-5px);
      box-shadow: 8px 8px 0px var(--accent-color);
    }

    .provider-name {
      font-family: var(--font-heading);
      font-size: 2rem;
      text-transform: uppercase;
      margin-bottom: 1.5rem;
      color: var(--accent-color);
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .provider-name i {
      font-size: 1.8rem;
      transition: all 0.3s ease;
    }

    .cert-provider:hover .provider-name i {
      transform: scale(1.2);
    }

    .provider-count {
      position: absolute;
      top: 1rem;
      right: 1rem;
      font-family: var(--font-heading);
      font-size: 3rem;
      color: var(--accent-color);
      opacity: 0.3;
      line-height: 1;
    }

    .cert-provider:hover .provider-count {
      opacity: 1;
    }

    .cert-list {
      list-style: none;
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }

    .cert-list li {
      font-size: 0.9rem;
      padding: 0.5rem 0;
      border-bottom: 1px solid var(--border-color);
      position: relative;
      padding-left: 1.5rem;
      transition: all 0.3s ease;
    }

    .cert-list li:last-child {
      border-bottom: none;
    }

    .cert-list li::before {
      content: "✓";
      position: absolute;
      left: 0;
      color: var(--accent-color);
      font-weight: bold;
    }

    .cert-provider:hover .cert-list li {
      color: var(--text-color);
    }

    .cert-list li:hover {
      transform: translateX(5px);
      color: var(--accent-color);
    }

    @media (max-width: 768px) {
      .about-hero h1 {
        font-size: 18vw;
      }

      .hero-stats {
        flex-direction: column;
      }

      .hero-bio {
        font-size: 1.1rem;
      }

      .education-grid {
        grid-template-columns: 1fr;
      }

      .harvard-card {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }

      .harvard-year {
        font-size: 2rem;
      }

      .harvard-content {
        flex-direction: column;
        align-items: flex-start;
      }

      .harvard-content h3 {
        font-size: 1.1rem;
