---
import BrutalistLayout from '../layouts/BrutalistLayout.astro';

const techStack = [
  { name: 'TypeScript',       icon: 'devicon-typescript-plain colored',  level: 'Avançado' },
  { name: 'Python',           icon: 'devicon-python-plain colored',       level: 'Avançado' },
  { name: 'Node.js',          icon: 'devicon-nodejs-plain colored',       level: 'Avançado' },
  { name: 'Next.js',          icon: 'devicon-nextjs-plain',              level: 'Avançado' },
  { name: 'React',            icon: 'devicon-react-original colored',     level: 'Avançado' },
  { name: 'Docker',           icon: 'devicon-docker-plain colored',       level: 'Intermediário' },
  { name: 'PostgreSQL',       icon: 'devicon-postgresql-plain colored',   level: 'Avançado' },
  { name: 'Prisma ORM',       icon: 'devicon-prisma-original colored',    level: 'Avançado' },
  { name: 'Flask',            icon: 'devicon-flask-original',             level: 'Intermediário' },
  { name: 'JavaScript',       icon: 'devicon-javascript-plain colored',   level: 'Avançado' },
  { name: 'Tailwind CSS',     icon: 'devicon-tailwindcss-plain colored',  level: 'Avançado' },
  { name: 'Git',              icon: 'devicon-git-plain colored',          level: 'Avançado' },
  { name: 'Linux',            icon: 'devicon-linux-plain',                level: 'Intermediário' },
  { name: 'C',                icon: 'devicon-c-plain colored',            level: 'Básico' },
  { name: 'API Bancária/mTLS', icon: 'fa-solid fa-shield-halved',        level: 'Avançado' },
  { name: 'REST APIs',        icon: 'fa-solid fa-plug',                   level: 'Avançado' },
];

const levelColor: Record<string, string> = {
  'Avançado':     'rgba(34,197,94,0.12)',
  'Intermediário': 'rgba(234,179,8,0.12)',
  'Básico':       'rgba(148,163,184,0.12)',
};
const levelText: Record<string, string> = {
  'Avançado':     '#4ade80',
  'Intermediário': '#facc15',
  'Básico':       '#94a3b8',
};
---

<BrutalistLayout title="Sobre - Denilson Oliveira">
  <main class="max-w-5xl mx-auto px-6 py-16">

    <!-- ─── Page header ─── -->
    <div class="page-header">
      <p class="page-eyebrow">whoami</p>
      <h1 class="page-title">Sobre Mim</h1>
      <div class="title-bar"></div>
    </div>

    <!-- ─── Bio card ─── -->
    <div class="card bio-card">
      <div class="bio-avatar">
        <i class="fa-solid fa-user"></i>
      </div>
      <div class="bio-body">
        <div class="bio-meta">
          <h2 class="bio-name">Denilson Oliveira da Silva</h2>
          <p class="bio-role">Full Stack Architect <span class="bio-at">@</span> Mentor AI</p>
        </div>
        <p class="bio-text">
          Desenvolvedor Full Stack com foco em arquiteturas SaaS, alta disponibilidade e automação de processos financeiros. Apaixonado por transformar problemas complexos em soluções elegantes e escaláveis — do back-end ao cloud.
        </p>
        <p class="bio-text">
          Atualmente graduando em <strong class="text-highlight">Ciência da Computação</strong> pela ANHEMBI MORUMBI, trabalho na modernização de sistemas corporativos e infraestrutura tecnológica pela <strong class="text-accent-highlight">Mentor AI</strong>.
        </p>
                <p class="bio-text">
          Possuo uma empresa chamada <a href="https://manditecnologia.com.br/" target="_blank" class="text-accent-highlight" style="text-decoration: underline; text-underline-offset: 3px;">Mandi Tecnologia</a>, trabalhando na modernização de sistemas corporativos e infraestrutura e segurança pela <strong class="text-accent-highlight">Mentor AI</strong>.
        </p>
        <div class="bio-links">
          <a href="https://www.linkedin.com/in/denilsonso/" target="_blank" class="bio-link">
            <i class="fa-brands fa-linkedin"></i> LinkedIn
          </a>
          <a href="https://github.com/denilsude" target="_blank" class="bio-link">
            <i class="fa-brands fa-github"></i> GitHub
          </a>
          <a href="https://www.hackerrank.com/profile/denilsonfb21" target="_blank" class="bio-link">
            <i class="fa-solid fa-code"></i> HackerRank
          </a>
        </div>
      </div>
    </div>

    <!-- ─── Experience & Education ─── -->
    <div class="info-grid">
      <div class="card info-card">
        <div class="info-header">
          <div class="info-icon" style="background: rgba(14,165,233,0.12);">
            <i class="fa-solid fa-briefcase" style="color: #38bdf8;"></i>
          </div>
          <h3 class="info-title">Experiência</h3>
        </div>
        <div class="timeline-item" style="border-left-color: #38bdf8;">
          <p class="timeline-role">Full Stack Developer</p>
          <p class="timeline-company" style="color: #38bdf8;">Mandi Tecnologia</p>
          <p class="timeline-desc">Sistemas SaaS corporativos, integrações bancárias com API Sicoob mTLS, ERP Omie e automação de fluxos financeiros.</p>
        </div>
      </div>

      <div class="card info-card">
        <div class="info-header">
          <div class="info-icon" style="background: rgba(129,140,248,0.12);">
            <i class="fa-solid fa-graduation-cap" style="color: #818cf8;"></i>
          </div>
          <h3 class="info-title">Educação</h3>
        </div>
        <div class="timeline-item" style="border-left-color: #818cf8;">
          <p class="timeline-role">Ciência da Computação</p>
          <p class="timeline-company" style="color: #818cf8;">ANHEMBI MORUMBI</p>
          <p class="timeline-desc">Graduação em andamento. Foco em algoritmos, estruturas de dados, sistemas operacionais e redes.</p>
        </div>
      </div>
    </div>

    <!-- ─── Tech Stack ─── -->
    <div class="section-header">
      <p class="page-eyebrow">tech.stack</p>
      <h2 class="section-title">Habilidades Técnicas</h2>
      <p class="section-sub">Tecnologias que domino e utilizo no dia a dia</p>
    </div>

    <div class="tech-grid">
      {techStack.map(tech => (
        <div class="tech-card">
          <div class="tech-top">
            <i class={`${tech.icon} tech-icon`}></i>
            <span class="tech-level"
                  style={`background: ${levelColor[tech.level]}; color: ${levelText[tech.level]};`}>
              {tech.level}
            </span>
          </div>
          <p class="tech-name">{tech.name}</p>
        </div>
      ))}
    </div>

  </main>
</BrutalistLayout>

<style>
  /* ── Page header ── */
  .page-header { margin-bottom: 3rem; }

  .page-eyebrow {
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
    font-size: 0.72rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #38bdf8;
    margin-bottom: 0.6rem;
  }

  .page-title {
    font-size: clamp(2.5rem, 6vw, 3.75rem);
    font-weight: 900;
    letter-spacing: -0.03em;
    color: var(--text);
    margin-bottom: 0.75rem;
  }

  .title-bar {
    width: 3.5rem;
    height: 3px;
    border-radius: 9999px;
    background: linear-gradient(to right, #38bdf8, #818cf8);
  }

  /* ── Bio card ── */
  .bio-card {
    display: flex;
    gap: 1.5rem;
    padding: 2rem;
    margin-bottom: 1.5rem;
    align-items: flex-start;
  }

  @media (max-width: 640px) {
    .bio-card { flex-direction: column; }
  }

  .bio-avatar {
    width: 3.5rem;
    height: 3.5rem;
    border-radius: 14px;
    background: linear-gradient(135deg, rgba(14,165,233,0.2), rgba(129,140,248,0.2));
    border: 1px solid rgba(14,165,233,0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    font-size: 1.25rem;
    color: #38bdf8;
  }

  .bio-body { flex: 1; }

  .bio-meta { margin-bottom: 1rem; }

  .bio-name {
    font-size: 1.15rem;
    font-weight: 700;
    color: var(--text);
  }

  .bio-role {
    font-size: 0.82rem;
    color: var(--muted);
    margin-top: 0.125rem;
  }

  .bio-at { color: var(--muted2); }

  .bio-text {
    font-size: 0.9rem;
    line-height: 1.75;
    color: #94a3b8;
    margin-bottom: 0.875rem;
  }

  .text-highlight  { color: var(--text); font-weight: 600; }
  .text-accent-highlight { color: #38bdf8; font-weight: 600; }

  .bio-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 1.25rem;
  }

  .bio-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.78rem;
    font-weight: 600;
    color: var(--muted);
    text-decoration: none;
    padding: 0.375rem 0.875rem;
    border: 1px solid var(--border);
    border-radius: 8px;
    transition: all 0.2s ease;
  }

  .bio-link:hover {
    color: #38bdf8;
    border-color: rgba(14,165,233,0.4);
    background: rgba(14,165,233,0.06);
  }

  /* ── Info grid ── */
  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1rem;
    margin-bottom: 3.5rem;
  }

  .info-card { padding: 1.5rem; }

  .info-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.25rem;
  }

  .info-icon {
    width: 2.25rem;
    height: 2.25rem;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
  }

  .info-title {
    font-size: 0.95rem;
    font-weight: 700;
    color: var(--text);
  }

  .timeline-item {
    border-left: 2px solid;
    padding-left: 1rem;
  }

  .timeline-role {
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--text);
    margin-bottom: 0.125rem;
  }

  .timeline-company {
    font-size: 0.75rem;
    font-family: 'JetBrains Mono', monospace;
    margin-bottom: 0.5rem;
  }

  .timeline-desc {
    font-size: 0.78rem;
    color: var(--muted);
    line-height: 1.6;
  }

  /* ── Section header ── */
  .section-header { margin-bottom: 1.5rem; }

  .section-title {
    font-size: 2rem;
    font-weight: 800;
    letter-spacing: -0.02em;
    color: var(--text);
    margin-bottom: 0.25rem;
  }

  .section-sub {
    font-size: 0.82rem;
    color: var(--muted);
  }

  /* ── Tech grid ── */
  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 0.75rem;
  }

  .tech-card {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1rem;
    transition: all 0.25s ease;
    cursor: default;
  }

  .tech-card:hover {
    background: var(--card-hover);
    border-color: rgba(14,165,233,0.35);
    transform: translateY(-3px);
    box-shadow: 0 12px 28px rgba(14,165,233,0.1);
  }

  .tech-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }

  .tech-icon {
    font-size: 1.6rem;
    line-height: 1;
  }

  .devicon-nextjs-plain,
  .devicon-flask-original,
  .devicon-astro-plain,
  .devicon-linux-plain {
    color: #e2e8f0;
  }

  .fa-shield-halved, .fa-plug {
    font-size: 1.3rem;
    color: #38bdf8;
  }

  .tech-level {
    font-size: 0.6rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 0.175rem 0.475rem;
    border-radius: 5px;
  }

  .tech-name {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--muted);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .tech-card:hover .tech-name {
    color: var(--text);
  }
</style>
