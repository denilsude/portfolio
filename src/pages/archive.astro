---
import BrutalistLayout from '../layouts/BrutalistLayout.astro';

const posts = [
  {
    slug: 'clawdbot-nova-geracao-agentes-ia',
    title: 'Clawd.bot e a Nova Geração de Agentes de IA 24/7',
    date: '2026-01-27',
    excerpt: 'Na evolução contínua da inteligência artificial, assistimos a uma transformação significativa: o surgimento de agentes de IA verdadeiramente autônomos, como o ClawDBot.',
    tags: ['IA', 'Agentes', 'Automação', 'ClawDBot'],
    category: 'AI'
  },
  {
    slug: 'introducao-ao-machine-learning',
    title: 'Introdução ao Machine Learning',
    date: '2024-01-15',
    excerpt: 'Uma visão geral dos fundamentos de machine learning e suas aplicações práticas no mundo real.',
    tags: ['IA', 'Python', 'Data Science'],
    category: 'ML'
  },
  {
    slug: 'automacao-com-python',
    title: 'Automação de Processos com Python',
    date: '2024-01-10',
    excerpt: 'Como usar Python para automatizar tarefas repetitivas e aumentar a produtividade.',
    tags: ['Python', 'Automação', 'Produtividade'],
    category: 'Dev'
  },
  {
    slug: 'inteligencia-artificial-aplicada',
    title: 'Aplicações Práticas de Inteligência Artificial',
    date: '2024-01-05',
    excerpt: 'Exemplos reais de como a IA está transformando diferentes setores e indústrias.',
    tags: ['IA', 'Aplicações', 'Tecnologia'],
    category: 'AI'
  },
  {
    slug: 'desenvolvimento-web-moderno',
    title: 'Desenvolvimento Web Moderno com React',
    date: '2023-12-28',
    excerpt: 'Explorando as melhores práticas para desenvolvimento web com as tecnologias mais recentes.',
    tags: ['React', 'JavaScript', 'Frontend'],
    category: 'Dev'
  },
  {
    slug: 'como-escolher-sua-primeira-stack',
    title: 'Como Escolher Sua Primeira Stack',
    date: '2023-12-20',
    excerpt: 'Guia prático para iniciantes na programação escolherem as tecnologias mais adequadas.',
    tags: ['Desenvolvimento', 'Carreira', 'Iniciantes'],
    category: 'Career'
  },
  {
    slug: 'estrategias-de-versionamento-no-git',
    title: 'Estratégias de Versionamento no Git',
    date: '2023-12-15',
    excerpt: 'Melhores práticas para gerenciamento de versões de código em projetos.',
    tags: ['Git', 'Versionamento', 'DevOps'],
    category: 'DevOps'
  }
];
---

<BrutalistLayout title="Arquivo - Levi Lucena">
  <!-- HERO SECTION -->
  <section class="archive-hero">
    <div class="container">
      <h1>Archive<br /><span class="text-accent">{posts.length} Posts</span></h1>
      <p class="hero-subtitle">Explorando ideias, conceitos e experiências</p>
    </div>
  </section>

  <!-- POSTS TIMELINE -->
  <section class="container">
    <div class="archive-timeline">
      {posts.map((post, index) => (
        <article class={`timeline-item hover-trigger ${index % 2 === 0 ? 'left' : 'right'}`}>
          <div class="timeline-number">{(posts.length - index).toString().padStart(2, '0')}</div>
          <div class="timeline-content">
            <div class="timeline-header">
              <div class="timeline-date">
                <i class="far fa-calendar"></i>
                <span>{new Date(post.date).toLocaleDateString('pt-BR', { year: 'numeric', month: 'short', day: 'numeric' })}</span>
              </div>
              <span class="timeline-category">{post.category}</span>
            </div>
            <h3 class="timeline-title">
              <a href={`/portfolio/posts/${post.slug}`}>{post.title}</a>
            </h3>
            <p class="timeline-excerpt">{post.excerpt}</p>
            <div class="timeline-tags">
              {post.tags.map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </div>
        </article>
      ))}
    </div>
  </section>

  <!-- FILTERS -->
  <section class="container">
    <div class="filter-section">
      <button class="filter-btn hover-trigger active">All</button>
      <button class="filter-btn hover-trigger">AI & ML</button>
      <button class="filter-btn hover-trigger">Development</button>
      <button class="filter-btn hover-trigger">Career</button>
      <button class="filter-btn hover-trigger">DevOps</button>
    </div>
  </section>

  <style is:global>
    /* ARCHIVE HERO */
    .archive-hero {
      min-height: 60vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      border-bottom: 1px solid var(--border-color);
    }

    .archive-hero h1 {
      font-family: var(--font-heading);
      font-size: clamp(4rem, 12vw, 10rem);
      line-height: 0.9;
      text-transform: uppercase;
      margin-bottom: 1rem;
    }

    .archive-hero h1 span {
      color: var(--accent-color);
    }

    .hero-subtitle {
      font-size: 1.5rem;
      opacity: 0.7;
      max-width: 600px;
      margin: 0 auto;
      text-align: center;
    }

    /* TIMELINE */
    .archive-timeline {
      display: flex;
      flex-direction: column;
      gap: 1px;
    }

    .timeline-item {
      position: relative;
      border-bottom: 1px solid var(--border-color);
      padding: 3rem 2rem;
      display: flex;
      gap: 2rem;
      transition: all 0.3s ease;
    }

    .timeline-item:hover {
      background-color: var(--text-color);
      color: var(--bg-color);
      transform: translateX(10px);
      box-shadow: 8px 8px 0px var(--accent-color);
    }

    .timeline-item:first-child {
      border-top: 1px solid var(--border-color);
    }

    .timeline-number {
      font-family: var(--font-heading);
      font-size: 4rem;
      line-height: 1;
      color: var(--accent-color);
      opacity: 0.5;
      transition: all 0.3s ease;
    }

    .timeline-item:hover .timeline-number {
      opacity: 1;
      color: var(--bg-color);
      transform: scale(1.1);
    }

    .timeline-content {
      flex: 1;
    }

    .timeline-header {
      display: flex;
      align-items: center;
      gap: 1rem;
      margin-bottom: 1rem;
    }

    .timeline-date {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      font-size: 0.9rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .timeline-date i {
      color: var(--accent-color);
    }

    .timeline-category {
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      padding: 0.25rem 0.75rem;
      border: 1px solid var(--accent-color);
      color: var(--accent-color);
    }

    .timeline-item:hover .timeline-category {
      color: var(--bg-color);
      border-color: var(--bg-color);
    }

    .timeline-title {
      font-family: var(--font-heading);
      font-size: 2rem;
      line-height: 1.1;
      margin-bottom: 1rem;
      text-transform: uppercase;
    }

    .timeline-title a {
      color: inherit;
      transition: all 0.3s ease;
    }

    .timeline-item:hover .timeline-title a {
      color: var(--accent-color);
    }

    .timeline-excerpt {
      font-size: 1rem;
      line-height: 1.6;
      opacity: 0.8;
      margin-bottom: 1.5rem;
      max-width: 800px;
    }

    .timeline-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }

    .timeline-tags .tag {
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      padding: 0.25rem 0.75rem;
      border: 1px solid var(--border-color);
      transition: all 0.3s ease;
    }

    .timeline-item:hover .timeline-tags .tag {
      border-color: var(--bg-color);
    }

    /* FILTER SECTION */
    .filter-section {
      display: flex;
      justify-content: center;
      gap: 1rem;
      flex-wrap: wrap;
      margin-top: 2rem;
      padding: 2rem;
      border: 3px solid var(--border-color);
    }

    .filter-btn {
      padding: 1rem 2rem;
      font-family: var(--font-heading);
      font-size: 1.2rem;
      text-transform: uppercase;
      border: 2px solid var(--border-color);
      background: transparent;
      color: inherit;
      transition: all 0.3s ease;
      cursor: none;
    }

    .filter-btn:hover,
    .filter-btn.active {
      background-color: var(--accent-color);
      color: var(--bg-color);
      border-color: var(--accent-color);
      transform: translateY(-3px);
    }

    @media (max-width: 768px) {
      .archive-hero h1 {
        font-size: 18vw;
      }

      .timeline-item {
        flex-direction: column;
        gap: 1rem;
      }

      .timeline-number {
        font-size: 3rem;
      }

      .timeline-title {
        font-size: 1.5rem;
      }

      .filter-section {
        flex-direction: column;
      }

      .filter-btn {
        width: 100%;
      }
    }
  </style>
</BrutalistLayout>
