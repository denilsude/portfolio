---
import BrutalistLayout from '../layouts/BrutalistLayout.astro';

const author = {
  name: 'Levi Lucena',
  role: 'Engenheiro de Software & Engenheiro de Soluções de IA',
  bio: 'Construindo soluções inteligentes que transformam ideias em realidade digital.'
};

const recentPosts = [
  {
    slug: 'clawdbot-nova-geracao-agentes-ia',
    title: 'Clawd.bot e a Nova Geração de Agentes de IA',
    date: '2026-01-27',
    tags: ['IA', 'Agentes', 'Automação']
  },
  {
    slug: 'introducao-ao-machine-learning',
    title: 'Introdução ao Machine Learning',
    date: '2024-01-15',
    tags: ['IA', 'Python', 'Data Science']
  },
  {
    slug: 'automacao-com-python',
    title: 'Automação de Processos com Python',
    date: '2024-01-10',
    tags: ['Python', 'Automação']
  }
];
---

<BrutalistLayout title="Levi Lucena - Portfolio">
  <!-- HERO SECTION -->
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1>{author.name}<br /><span class="text-accent">Portfolio</span></h1>
        <p class="hero-role">{author.role}</p>
        <p class="hero-bio">{author.bio}</p>
        
        <!-- MAGNETIC CTA -->
        <div class="cta-wrapper hover-trigger" id="magneticArea">
          <a href="/portfolio/projects" class="magnetic-btn">
            Ver Projetos
            <i class="fas fa-arrow-right"></i>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- TICKER SECTION -->
  <div class="ticker-wrap">
    <div class="ticker">
      <div class="ticker-item">Python • React • AI • Machine Learning • Astro • Node.js • Docker • PostgreSQL • TypeScript • FastAPI • </div>
      <div class="ticker-item">Python • React • AI • Machine Learning • Astro • Node.js • Docker • PostgreSQL • TypeScript • FastAPI • </div>
      <div class="ticker-item">Python • React • AI • Machine Learning • Astro • Node.js • Docker • PostgreSQL • TypeScript • FastAPI • </div>
    </div>
  </div>

  <!-- RECENT POSTS -->
  <section class="container">
    <h2 class="section-title">Recent Posts</h2>
    <div class="posts-grid">
      {recentPosts.map(post => (
        <article class="post-card hover-trigger">
          <div class="post-content">
            <div class="post-meta">
              <time datetime={post.date}>{new Date(post.date).toLocaleDateString('pt-BR', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
              <div class="post-tags">
                {post.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            </div>
            <h3 class="post-title">
              <a href={`/portfolio/posts/${post.slug}`}>{post.title}</a>
            </h3>
          </div>
        </article>
      ))}
    </div>
  </section>

  <style is:global>
    /* HERO SECTION */
    .hero {
      height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      text-align: center;
      position: relative;
      border-bottom: 1px solid var(--border-color);
    }

    .hero h1 {
      font-family: var(--font-heading);
      font-size: clamp(4rem, 15vw, 12rem);
      line-height: 0.85;
      text-transform: uppercase;
      margin-bottom: 2rem;
      letter-spacing: -2px;
    }

    .hero h1 span {
      color: transparent;
      -webkit-text-stroke: 3px var(--accent-color);
    }

    .hero-role {
      font-family: var(--font-heading);
      font-size: 2rem;
      text-transform: uppercase;
      margin-bottom: 1rem;
      letter-spacing: 2px;
    }

    .hero-bio {
      font-size: 1.2rem;
      max-width: 600px;
      margin: 0 auto;
      opacity: 0.8;
      line-height: 1.8;
      text-align: center;
    }

    /* MAGNETIC CTA */
    .cta-wrapper {
      position: relative;
      display: inline-block;
      margin-top: 3rem;
    }

    .magnetic-btn {
      display: flex;
      align-items: center;
      gap: 1rem;
      background-color: var(--accent-color);
      color: var(--bg-color);
      padding: 1.5rem 4rem;
      font-family: var(--font-heading);
      font-size: 1.5rem;
      text-transform: uppercase;
      border: none;
      transition: transform 0.2s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      text-decoration: none;
      font-weight: bold;
    }

    .magnetic-btn:hover i {
      transform: translateX(10px);
    }

    .magnetic-btn i {
      transition: transform 0.3s ease;
    }

    /* POSTS SECTION */
    .section-title {
      font-family: var(--font-heading);
      font-size: clamp(2rem, 5vw, 4rem);
      margin-bottom: 3rem;
      text-transform: uppercase;
      border-bottom: 3px solid var(--accent-color);
      padding-bottom: 1rem;
      display: inline-block;
    }

    .posts-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }

    .post-card {
      border: 3px solid var(--text-color);
      padding: 2rem;
      transition: all 0.4s ease;
      position: relative;
      overflow: hidden;
      background: transparent;
    }

    .post-card:hover {
      background-color: var(--text-color);
      color: var(--bg-color);
      transform: translateY(-10px);
      box-shadow: 10px 10px 0px var(--accent-color);
    }

    .post-meta {
      margin-bottom: 1rem;
    }

    .post-meta time {
      font-size: 0.9rem;
      opacity: 0.7;
      font-weight: 600;
      text-transform: uppercase;
    }

    .post-tags {
      display: flex;
      gap: 0.5rem;
      margin-top: 0.5rem;
      flex-wrap: wrap;
    }

    .post-tags .tag {
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
      padding: 0.25rem 0.75rem;
      border: 1px solid var(--accent-color);
      color: var(--accent-color);
    }

    .post-card:hover .post-tags .tag {
      color: var(--bg-color);
      border-color: var(--bg-color);
    }

    .post-title {
      font-family: var(--font-heading);
      font-size: 1.8rem;
      line-height: 1.1;
      margin-top: 1rem;
      text-transform: uppercase;
    }

    .post-title a {
      color: inherit;
      transition: color 0.3s;
    }

    .post-card:hover .post-title a {
      color: var(--accent-color);
    }
  </style>
</BrutalistLayout>
