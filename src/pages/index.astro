---
import BrutalistLayout from '../layouts/BrutalistLayout.astro';
---

<BrutalistLayout title="Denilson Oliveira | Full Stack Architect">
  <main class="p-8 max-w-6xl mx-auto min-h-[70vh] flex flex-col justify-center">
    <div class="border-8 border-black p-12 bg-white shadow-[20px_20px_0px_0px_rgba(0,0,0,1)]">
      <h1 class="text-7xl md:text-9xl font-black uppercase leading-none mb-6 italic tracking-tighter">
        Denilson<br/>Oliveira
      </h1>
      <p class="text-2xl md:text-4xl font-bold uppercase border-t-4 border-black pt-6">
        Software Architect & Full Stack Developer
      </p>
      <div class="mt-8 flex flex-wrap gap-4">
        <a href="/projects" class="bg-black text-white px-8 py-4 font-black uppercase text-xl hover:bg-sky-500 border-4 border-black transition-colors">
          Ver Projetos
        </a>
        <a href="/about" class="bg-white text-black px-8 py-4 font-black uppercase text-xl hover:bg-black hover:text-white border-4 border-black transition-colors">
          Sobre Mim
        </a>
      </div>
    </div>
  </main>
</BrutalistLayout>