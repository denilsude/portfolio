---
import BrutalistLayout from '../layouts/BrutalistLayout.astro';

const technologies = [
  { name: 'TypeScript',   icon: 'devicon-typescript-plain colored' },
  { name: 'Python',       icon: 'devicon-python-plain colored' },
  { name: 'Node.js',      icon: 'devicon-nodejs-plain colored' },
  { name: 'React',        icon: 'devicon-react-original colored' },
  { name: 'Next.js',      icon: 'devicon-nextjs-plain' },
  { name: 'Docker',       icon: 'devicon-docker-plain colored' },
  { name: 'PostgreSQL',   icon: 'devicon-postgresql-plain colored' },
  { name: 'Prisma',       icon: 'devicon-prisma-original colored' },
  { name: 'Git',          icon: 'devicon-git-plain colored' },
  { name: 'Linux',        icon: 'devicon-linux-plain' },
  { name: 'Tailwind',     icon: 'devicon-tailwindcss-plain colored' },
  { name: 'JavaScript',   icon: 'devicon-javascript-plain colored' },
  { name: 'Flask',        icon: 'devicon-flask-original' },
  { name: 'C',            icon: 'devicon-c-plain colored' },
  { name: 'Astro',        icon: 'devicon-astro-plain' },
  { name: 'API REST',     icon: 'fa-solid fa-plug' },
  { name: 'mTLS',         icon: 'fa-solid fa-shield-halved' },
];

const doubled = [...technologies, ...technologies];
---

<BrutalistLayout title="Denilson Oliveira | Full Stack Architect">

  <!-- ─── Hero ─── -->
  <section class="hero-section">
    <div class="max-w-6xl mx-auto px-6 py-24 md:py-32">

      <div class="hero-badge">
        <span class="badge-dot"></span>
        Disponível para projetos
      </div>

      <h1 class="hero-title">
        <span class="line-white">Denilson</span>
        <span class="line-gradient">Oliveira</span>
      </h1>

      <p class="hero-subtitle">
        Software Architect &amp; Full Stack Developer
      </p>
      <p class="hero-description">
        Especialista em arquiteturas SaaS, integrações financeiras e automação
        de processos corporativos. Transformando problemas complexos em
        soluções elegantes.
      </p>

      <div class="hero-actions">
        <a href="/projects" class="btn-primary">
          <i class="fa-solid fa-code"></i>
          Ver Projetos
        </a>
        <a href="/about" class="btn-secondary">
          Sobre Mim
          <i class="fa-solid fa-arrow-right"></i>
        </a>
      </div>

      <!-- Stats -->
      <div class="hero-stats">
        <div class="stat-item">
          <p class="stat-number gradient-text">4+</p>
          <p class="stat-label">Anos de XP</p>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <p class="stat-number gradient-text">5+</p>
          <p class="stat-label">Projetos</p>
        </div>
        <div class="stat-divider"></div>
        <div class="stat-item">
          <p class="stat-number gradient-text">15+</p>
          <p class="stat-label">Tecnologias</p>
        </div>
      </div>
    </div>
  </section>

  <!-- ─── Tech Carousel ─── -->
  <section class="carousel-section">
    <div class="max-w-6xl mx-auto px-6">
      <p class="carousel-label">Stack Tecnológica</p>
    </div>

    <div class="carousel-wrapper">
      <!-- Fade left -->
      <div class="fade-left"></div>
      <!-- Fade right -->
      <div class="fade-right"></div>

      <div class="carousel-track">
        {doubled.map(tech => (
          <div class="tech-chip">
            <i class={`${tech.icon} chip-icon`}></i>
            <span class="chip-label">{tech.name}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- ─── CTA strip ─── -->
  <section class="cta-strip">
    <div class="max-w-6xl mx-auto px-6 py-16 flex flex-col md:flex-row items-center justify-between gap-8">
      <div>
        <h2 class="cta-title">Quer trabalhar juntos?</h2>
        <p class="cta-sub">Estou aberto a novos projetos e oportunidades.</p>
      </div>
      <div class="flex gap-4">
        <a href="https://www.linkedin.com/in/denilsonso/" target="_blank" class="btn-primary">
          <i class="fa-brands fa-linkedin"></i>
          LinkedIn
        </a>
        <a href="https://github.com/denilsude" target="_blank" class="btn-secondary">
          <i class="fa-brands fa-github"></i>
          GitHub
        </a>
      </div>
    </div>
  </section>

</BrutalistLayout>

<style>
  /* ── Hero ── */
  .hero-section {
    position: relative;
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: -20%;
    right: -10%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(14,165,233,0.06) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero-section::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: -5%;
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(129,140,248,0.05) 0%, transparent 70%);
    pointer-events: none;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(14, 165, 233, 0.08);
    border: 1px solid rgba(14, 165, 233, 0.2);
    border-radius: 999px;
    padding: 0.375rem 1rem;
    font-size: 0.75rem;
    font-weight: 600;
    color: #38bdf8;
    margin-bottom: 2rem;
    letter-spacing: 0.02em;
  }

  .badge-dot {
    width: 7px;
    height: 7px;
    border-radius: 50%;
    background: #22c55e;
    animation: pulse-dot 2s infinite;
  }

  @keyframes pulse-dot {
    0%, 100% { opacity: 1; transform: scale(1); }
    50%       { opacity: 0.5; transform: scale(0.85); }
  }

  .hero-title {
    font-size: clamp(3.5rem, 10vw, 7rem);
    font-weight: 900;
    line-height: 1;
    letter-spacing: -0.03em;
    margin-bottom: 1.5rem;
  }

  .line-white {
    display: block;
    color: var(--text);
  }

  .line-gradient {
    display: block;
    background: linear-gradient(135deg, #38bdf8 0%, #818cf8 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--muted);
    margin-bottom: 1rem;
    letter-spacing: 0.01em;
  }

  .hero-description {
    font-size: 1rem;
    color: var(--muted);
    max-width: 520px;
    line-height: 1.7;
    margin-bottom: 2.5rem;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 3rem;
  }

  .hero-stats {
    display: flex;
    align-items: center;
    gap: 2rem;
    padding: 1.5rem 0;
    border-top: 1px solid var(--border);
    max-width: 380px;
  }

  .stat-item { text-align: left; }

  .stat-number {
    font-size: 1.75rem;
    font-weight: 900;
    letter-spacing: -0.02em;
  }

  .stat-label {
    font-size: 0.72rem;
    color: var(--muted);
    margin-top: 0.1rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .stat-divider {
    width: 1px;
    height: 2.5rem;
    background: var(--border);
  }

  /* ── Carousel ── */
  .carousel-section {
    padding: 3rem 0 4rem;
    overflow: hidden;
  }

  .carousel-label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--muted2);
    font-family: 'JetBrains Mono', 'Fira Code', monospace;
    margin-bottom: 1.5rem;
  }

  .carousel-wrapper {
    position: relative;
    overflow: hidden;
  }

  .fade-left {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 8rem;
    background: linear-gradient(to right, var(--bg), transparent);
    z-index: 10;
    pointer-events: none;
  }

  .fade-right {
    position: absolute;
    right: 0;
    top: 0;
    bottom: 0;
    width: 8rem;
    background: linear-gradient(to left, var(--bg), transparent);
    z-index: 10;
    pointer-events: none;
  }

  .carousel-track {
    display: flex;
    gap: 0.75rem;
    animation: scroll-left 40s linear infinite;
    width: max-content;
    padding: 0.5rem 0;
  }

  .carousel-track:hover {
    animation-play-state: paused;
  }

  .tech-chip {
    display: inline-flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.625rem 1.25rem;
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 10px;
    white-space: nowrap;
    flex-shrink: 0;
    transition: all 0.25s ease;
    cursor: default;
  }

  .tech-chip:hover {
    border-color: rgba(14, 165, 233, 0.4);
    background: var(--card-hover);
    transform: translateY(-2px);
  }

  .chip-icon {
    font-size: 1.25rem;
    line-height: 1;
  }

  /* devicons fallback for non-colored */
  .devicon-nextjs-plain,
  .devicon-flask-original,
  .devicon-astro-plain,
  .devicon-linux-plain {
    color: #e2e8f0;
  }

  .fa-plug, .fa-shield-halved {
    font-size: 1.1rem;
    color: #38bdf8;
  }

  .chip-label {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--muted);
  }

  .tech-chip:hover .chip-label {
    color: var(--text);
  }

  @keyframes scroll-left {
    0%   { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  /* ── CTA strip ── */
  .cta-strip {
    border-top: 1px solid var(--border);
    background: var(--surface);
    margin-top: 2rem;
  }

  .cta-title {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--text);
    letter-spacing: -0.02em;
    margin-bottom: 0.375rem;
  }

  .cta-sub {
    font-size: 0.9rem;
    color: var(--muted);
  }
</style>
