---
import BrutalistLayout from '../layouts/BrutalistLayout.astro';

const projects = [
  {
    title: "Sistema de Gestão de Compras (SaaS)",
    description: "Plataforma corporativa para controle de fluxo de caixa e aprovações. Integração nativa com API Sicoob (mTLS) e ERP Omie para conciliação automática.",
    tags: ["Next.js", "TypeScript", "Prisma", "PostgreSQL", "Docker"],
    link: "https://github.com/denilsude"
  },
  {
    title: "Kallizoe E-commerce",
    description: "Plataforma de vendas online com foco em performance e experiência do usuário. Implementação de fluxos de checkout e gestão de inventário.",
    tags: ["React", "Node.js", "Tailwind CSS", "API Integration"],
    link: "https://github.com/denilsude"
  },
  {
    title: "Vibe Downloader",
    description: "Aplicação full stack para download de mídias, com sistema de autenticação e histórico de usuários.",
    tags: ["Python", "Flask", "JavaScript", "SQLite"],
    link: "https://github.com/denilsude/vibedownloader"
  },
  {
    title: "Validador de Sudoku",
    description: "Algoritmo de validação de matrizes de Sudoku desenvolvido para alta performance, integrando C com interface Python.",
    tags: ["C", "Python", "Flask", "Algorithms"],
    link: "https://github.com/denilsude/validador_sudoku"
  }
];
---

<BrutalistLayout title="Projetos - Denilson Sude">
  <main class="p-8 max-w-6xl mx-auto">
    <h1 class="text-6xl font-black mb-12 uppercase italic">Projetos</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {projects.map(project => (
        <div class="border-4 border-black p-6 bg-white shadow-[10px_10px_0px_0px_rgba(0,0,0,1)] hover:translate-x-1 hover:translate-y-1 hover:shadow-none transition-all">
          <h2 class="text-3xl font-black mb-4 uppercase">{project.title}</h2>
          <p class="text-lg mb-6 font-medium leading-tight">{project.description}</p>
          
          <div class="flex flex-wrap gap-2 mb-6">
            {project.tags.map(tag => (
              <span class="border-2 border-black px-2 py-1 text-xs font-bold uppercase bg-gray-100">
                {tag}
              </span>
            ))}
          </div>
          
          <a href={project.link} target="_blank" class="inline-block border-4 border-black px-6 py-2 font-black uppercase bg-black text-white hover:bg-white hover:text-black transition-colors">
            Ver Código
          </a>
        </div>
      ))}
    </div>
  </main>
</BrutalistLayout>